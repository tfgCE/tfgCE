<library group="loading scenes">

	environments
	============
	
	<environmentType name="cubes environment">
		<defaultInRoomPlacement>
			<location/>
			<rotation/>
		</defaultInRoomPlacement>
		<empty/>
		<params>
			<colour name="loaderHubScreenInterior" modulate="0.70">0.000 0.050 0.055 1.000</colour>

			segment01<vector2 name="useAboveFog_posNormUpSeg" x="15.5" y="1.2"/> off
			<float name="aboveFogDistanceCoef">0.0000001</float> ~28k
			<float name="aboveFogHeightCoef">0.008</float>

			<!--
			<invertedFloat name="inFogDistCoef">800.0</invertedFloat>
			<vector2 name="allowUsingFogInBackground" x="700" y="-0.0025"/>
			-->
			<float name="useStars">0.1</float>
			<matrix33 name="starsMatrix"/>
			<cycle name="starsPt">0.275</cycle>

			<float name="sun">0.65</float>
			
			<directionNormalised name="lightDir" x="-0.55" y="-0.2" z="-0.15"/> will be recalculated basing on lightAt
			<float name="fresnelStrength">1.0</float>
			<float name="lightSpecularSide">1.0</float>
			<float name="lightSpecularStrength">0.0</float>
			<colour name="lightSpecularColour" r="1" g="0.95" b="0.75" a="0.7"/>
			<float name="lightSpecularSizeDot">0.99925</float>
			<colour name="lightModulateColourOnto" modulate="1.00">0.210 0.510 0.610 1.000</colour>
			<colour name="lightModulateColourMid"  modulate="0.10">0.450 0.551 0.410 1.000</colour>
			<colour name="lightModulateColourAway" modulate="0.80">0.210 0.510 0.610 1.000</colour>

			<invertedFloat name="distanceModCoef">16000.0</invertedFloat>
			<invertedFloat name="fogDistanceCoef">160</invertedFloat>
			<float name="autoFogDistanceBackgroundAnchorXY">190</float>
			<segment01 name="useBackgroundVerticalForFogSeg" start="0" length="-40"/>

			<directionNormalised name="backgroundUp" x="0" y="0" z="1"/>
			<location name="backgroundAnchor" x="0" y="0" z="0"/>
			<float name="backgroundSun">0.0</float>
			<float name="backgroundSunSizeDot">1.99925</float>
			<float name="backgroundSunEdgeCoef">4000</float>
			<colour name="backgroundSunColour" r="1" g="0.95" b="0.75" a="0.7"/>
			<float name="backgroundSunHalo">0.0</float>
			<float name="backgroundSunHaloCoef">10.0</float>
			
			<segment01 name="backgroundUseFogSeg" start="0.2" length="-0.45"/>

			<colour name="backgroundSkyColourOntoLight" modulate="0.7" r="0.7" g="0.6" b="0.68"/>
			<colour name="backgroundSkyColourAwayLight" modulate="0.7" r="0.063" g="0.251" b="0.314"/>
			<colour name="backgroundSkyColourUp"		modulate="0.7" r="0.471" g="0.459" b="0.522" a="0.8"/>
			<segment01 name="backgroundSkyUseColourUpSeg" start="-1" length="2"/>
			
			<colour name="backgroundFogColourOntoLight" r="0.255" g="0.275" b="0.376"/>
			<colour name="backgroundFogColourAwayLight" r="0.088" g="0.125" b="0.121"/>
			<colour name="backgroundFogColourDown" 		r="0.202" g="0.282" b="0.20" a="0.5"/>
			<segment01 name="backgroundFogUseColourDownSeg" start="-3.3" length="1.3"/>

			<colour name="backgroundReflectionsSkyColourUp"   >none</colour>
			<colour name="backgroundReflectionsFogColourDown" >none</colour>
		</params>
	</environmentType>
	
</library>


