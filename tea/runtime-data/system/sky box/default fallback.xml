<library group="sky box">

	this environment
	<environmentType name="default fallback">
		<defaultInRoomPlacement>
			<location/>
			<rotation/>
		</defaultInRoomPlacement>
		<empty/>
		<params>
			<float name="filterBloomThreshold">0.9</float>

			<!--
			<invertedFloat name="inFogDistCoef">800.0</invertedFloat>
			<vector2 name="allowUsingFogInBackground" x="700" y="-0.0025"/>
			-->

			<float name="useStars">0.0</float>
			<matrix33 name="starsMatrix"/>
			<cycle name="starsPt">0.0</cycle>

			<float name="sun">0.0</float>

			<cycle name="lightAt" range="-2 to 2">1.5</cycle>
			<directionNormalised name="lightDir" x="0.0" y="0.0" z="-1.0"/>
			<texture name="lightModulateTexture" texture=""/>
			<float name="lightModulateStrength">0.0</float>
			<float name="lightFresnelStrength">0.0</float>
			<colour name="lightSpecularColour" r="1" g="1" b="1" a="1"/>
			<float name="lightSpecularSizeDot">1.0</float>
			<float name="lightSpecularStrength" a="1.3"/>

			<invertedFloat name="distanceModCoef">1000.0</invertedFloat>
			<invertedFloat name="fogDistanceCoef">1000.0</invertedFloat>
			<float name="aboveFogDistanceCoef">0.000035</float> ~28k
			<float name="aboveFogHeightCoef">0.00009</float> ~11.1k
			<float name="autoFogDistanceBackgroundAnchorXY">390</float>
			<segment01 name="useBackgroundVerticalForFogSeg" start="0" length="0"/>

			<directionNormalised name="backgroundUp" x="0" y="0" z="1"/>

			<location name="backgroundAnchor" x="0" y="0" z="0"/>
			<float name="backgroundSun">1.0</float>
			<float name="backgroundSunSizeDot">0.99975</float>
			<float name="backgroundSunEdgeCoef">18000</float>
			<colour name="backgroundSunColour" r="0.96" g="0.97" b="1.0" a="0.9"/>
			<float name="backgroundSunHalo">0.05</float>
			<float name="backgroundSunHaloCoef">20.0</float>

			<segment01 name="backgroundUseFogSeg" start="0.2" length="-0.45"/>
			
			don't use uniform background fog
			<float name="uniformBackgroundFog">0.0</float> does not mix
			<colour name="uniformBackgroundFogColour"   modulate="0.0" r="0.0" g="0.0" b="0.0"/>

			<float name="applyFogSoFar">0</float> without this we get artefacts on Quest

			<colour name="backgroundSkyColourAwayLight" modulate="0.95" r="0.25" g="0.25" b="0.35"/> other way around
			<colour name="backgroundSkyColourOntoLight" modulate="0.95" r="0.1" g="0.1" b="0.12"/>
			<colour name="backgroundSkyColourUp"        modulate="0.95" r="0.1" g="0.1" b="0.15" a="0.8"/>
			<segment01 name="backgroundSkyUseColourUpSeg" start="-1" length="2"/>
			
			<colour name="backgroundFogColourAwayLight" modulate="0.55" r="0.1" g="0.1" b="0.15"/> other way around
			<colour name="backgroundFogColourOntoLight" modulate="0.55" r="0.128" g="0.125" b="0.021"/>
			<colour name="backgroundFogColourDown"      modulate="0.55" r="0.102" g="0.082" b="0.020" a="0.5"/>
			<segment01 name="backgroundFogUseColourDownSeg" start="0.3" length="-1.3"/>

			<colour name="backgroundReflectionsSkyColourUp"   >none</colour>
			<colour name="backgroundReflectionsFogColourDown" >none</colour>

			<float name="retroOffset">-0.025</float>

		</params>
	</environmentType>
	
</library>


