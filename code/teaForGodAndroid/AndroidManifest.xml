<?xml version="1.0" encoding="utf-8"?>
<!-- Changes made to Package Name should also be reflected in the Debugging - Package Name property, in the Property Pages -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.voidroom.TeaForGodEmperor"
        android:installLocation="auto">
    <!-- no android:versionCode="184"
            android:versionName="$(version.name)"
         as it is defined through properties     
    -->

    <!-- This is the platform API where NativeActivity was introduced. -->
    <uses-sdk android:minSdkVersion="23" android:targetSdkVersion="32"/>
  
    <!-- gles -->
    <uses-feature android:glEsVersion="0x00030001" android:required="true"/>

    <!-- openxr -->
    <uses-permission android:name="org.khronos.openxr.permission.OPENXR" />
    <uses-permission android:name="org.khronos.openxr.permission.OPENXR_SYSTEM" /> 

    <!-- vr, requires 6dof -->
    <uses-feature android:name="android.hardware.vr.headtracking" android:required="true" android:version="1"/>

    <!-- access to the internet (for sending crash reports) -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- bhaptics -->
    <!-- Connectivity permissions for bhaptics (also check below) -->
    <uses-permission android:name="android.permission.BLUETOOTH" android:maxSdkVersion="30"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" android:maxSdkVersion="30"/>
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <queries><package android:name="com.bhaptics.player" /></queries>

    <!-- OCULUS -->
    <!-- both controllers and hands -->
    <uses-feature android:name="oculus.software.handtracking" android:required="false"/>
    <uses-permission android:name="oculus.permission.handtracking"/>
    <uses-permission android:name="com.oculus.permission.HAND_TRACKING"/>

    <!-- VIVE -->
    <!-- If using Viveport DRM -->
    <!--<uses-permission android:name="com.viveport.CHECK_LICENSE" />-->

    <!-- This .apk has java code (TeaForGodActivity), set hasCode to true. -->
    <application
            android:label="@string/app_name"
            android:hasCode="true"
            android:icon="@drawable/ic_launcher"
            android:allowBackup="false"
            android:networkSecurityConfig="@xml/network_sec_config">

        <meta-data android:name="com.samsung.android.vr.application.mode" android:value="vr_only"/>

        <!-- OCULUS -->
        <!-- both Quest and Quest 2 -->
        <meta-data android:name="com.oculus.supportedDevices" android:value="quest|delmar"/>

        <!-- Our activity is the built-in NativeActivity framework class.
             This will take care of integrating with our NDK code. -->
        <activity android:name="com.voidroom.TeaForGodActivity"
                android:label="@string/app_name"
                android:configChanges="density|keyboard|keyboardHidden|navigation|orientation|screenLayout|screenSize|uiMode"
                android:screenOrientation="landscape"
                android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
                android:launchMode="singleTask"
                android:resizeableActivity="false"
                android:taskAffinity=""
				android:exported="true">
            <!-- Tell NativeActivity the name of our .so -->
            <meta-data android:name="android.app.lib_name" android:value="$(AndroidAppLibName)" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

                <!-- openxr -->
                <category android:name="org.khronos.openxr.intent.category.IMMERSIVE_HMD"/>

                <!-- OCULUS -->
                <category android:name="com.oculus.intent.category.VR" />

                <!-- VIVE -->
                <category android:name="com.htc.intent.category.VRAPP" />
            </intent-filter>

        </activity>
        
        <!-- OCULUS -->
        <!-- Enable focus awareness -->
        <meta-data android:name="com.oculus.vr.focusaware" android:value="true" />

        <!-- VIVE -->
        <meta-data android:name="com.htc.vr.content.NumDoFHmd" android:value="6DoF"/>
        <meta-data android:name="com.htc.vr.content.NumDoFController" android:value="6DoF"/>
        <meta-data android:name="com.htc.vr.content.NumController" android:value="2"/>

    </application>
    
</manifest> 
